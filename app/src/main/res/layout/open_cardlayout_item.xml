<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_collapseParallaxMultiplier="1.0">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:backgroundTint="#03838181"


        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pintrestappbar"
            android:elevation="8dp"
            android:titleTextColor="#ffffff" />


        <ImageView
            android:id="@+id/open_cardimageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/appbar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#10000000"
            android:elevation="4dp"

            android:foregroundGravity="center"
            android:padding="2dp" />

        <LinearLayout
            android:layout_marginTop="20dp"

            android:id="@+id/layoutpostedby"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/open_cardimageView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"

            >

            <TextView
                android:drawableLeft="@drawable/usermale24"
                android:id="@+id/textviewPostedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="By : "
                android:textColor="#d2353333"
                android:elevation="4dp"

                android:textSize="15dp" />

            <TextView
                android:id="@+id/textviewName"
                android:elevation="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Name"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#d2353333"
                android:textSize="15dp" />
            <Button
                android:backgroundTint="@color/pintrestbutton"
                android:text="View"
                android:background="@drawable/button2"
                android:textColor="#d2353333"
                android:elevation="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/visitprofile"
                android:layout_gravity="end"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"

            android:id="@+id/layoutviewparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutpostedby"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:id="@+id/layoutviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/textviewViewstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"

                    android:padding="3dp"
                    android:text="Views : "
                    android:textColor="#d2353333"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textviewViewscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:elevation="4dp"

                    android:text="00"
                    android:textColor="#d2353333"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/foundorlost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textColor="#d2353333">

                <TextView
                    android:id="@+id/textviewLostorfound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=" Lost/Found "
                    android:textAlignment="viewEnd"
                    android:elevation="4dp"

                    android:textColor="#d2353333"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layoutdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutviewparent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_open_cardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="DESCRIPTION"
                android:elevation="4dp"

                android:textAlignment="center"
                android:textColor="#d2353333"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutusershare"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/layoutdescription"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"

            >

            <Button
                android:text="Add a comment..."
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Comment"
                android:layout_weight="10"
                android:background="#09ffffff"
                android:elevation="4dp"

                android:textColor="#94353333"
                android:textAlignment="viewStart"
                />

            <ImageButton
                android:elevation="4dp"

                android:background="#09ffffff"
                android:src="@drawable/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Share"
                android:layout_weight="1" />
        </LinearLayout>


    </RelativeLayout>


</ScrollView>